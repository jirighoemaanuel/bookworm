    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/notes.css" />
    <title>BookWorm</title>
  </head>
  <body>
    <!-- Header Section -->
    <section id="header-section">
      <div class="header-content">
        <h1 class="main-header">Emmanuel Weyinmi</h1>
      </div>
      <div>
        <div class="sub-header">
          <img
            src="https://covers.openlibrary.org/b/isbn/<%= locals.book.isbn %>-M.jpg"
            alt=""
            class="book-cover"
          />
          <div class="book-info">
            <h2 class="book-title">
              <%= locals.book.title %> - by <%= locals.book.author %>
            </h2>
            <div class="book-detail">
              <p>ISBN: <%= locals.book.isbn %></p>
              <p>date read: <%= locals.book.read_date %></p>
              <p>How strongly i recommend it: <%= locals.book.rating %>/10</p>
            </div>
          </div>
        </div>
        <p class="amazon">
          Go to the <a href="<%= locals.book.amazon_link %>">Amazon page</a> for
          details and reviews
        </p>
      </div>

      <div class="summary">
        <p><%= locals.book.description %></p>
      </div>
    </section>

    <section id="main-section" class="main-section">
      <div class="main-content">
        <h3 class="note-header">My Notes</h3>
        <p class="book-note"><%= locals.book.note %></p>
      </div>
    </section>

    <section id="footer-section"></section>

